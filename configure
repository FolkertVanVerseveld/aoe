#!/bin/bash
mode='debug'
if (( $# >= 1 )); then
	case "$0" in
		debug) mode='debug' ;;
		release) mode='release' ;;
	esac
fi
opts="$*"
case "$mode" in
	debug) opts="-g -DDEBUG $opts" ;;
	release) opts="-O2 -ffast-math" ;;
esac
dir='genie game'
for i in $dir; do
	pushd "$i" >/dev/null
	./configure $opts
	popd >/dev/null
done
